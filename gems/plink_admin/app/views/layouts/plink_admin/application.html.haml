!!!
%html
  %head
    %title PlinkAdmin
    = stylesheet_link_tag    "plink_admin/application", :media => "all"
    = javascript_include_tag "plink_admin/application"
    = csrf_meta_tags

  %body
    %nav.top-bar
      .row
        %section.top-bar-section
          %ul.left
            %li= link_to "&laquo; Visit Site".html_safe, main_app.root_path
            %li.divider
            %li= link_to "Dashboard", plink_admin.root_path
            %li.divider
            - if admin_signed_in?
              %li= link_to 'Hero Promotions', plink_admin.hero_promotions_path
            %li.divider
              %li= link_to 'Find Users', plink_admin.users_path
            %li.divider
              %li= link_to 'Contests', plink_admin.contests_path
            %li.divider
              %li= link_to 'Affiliates', plink_admin.affiliates_path
            %li.divider
              %li= link_to 'Campaigns', plink_admin.campaigns_path
            %li.divider
              %li= link_to 'Landing Pages', plink_admin.landing_pages_path

          %ul.right
            - if admin_signed_in?
              %li.divider
              %li= link_to 'Sign Out', plink_admin.destroy_admin_session_path, method: 'delete'
            - else
              %li.divider
              %li= link_to 'Sign In', plink_admin.new_admin_session_path

    %p.notice= notice
    %p.alert= alert

    .row
      = yield
