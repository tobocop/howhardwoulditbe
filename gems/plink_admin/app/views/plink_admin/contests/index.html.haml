.row.collapse
  = render partial: 'plink_admin/users/search_form', locals: {path: search_contests_path}

%table.contest-list
  %thead
    %th Edit
    %th Description
    %th Image
    %th Prize
    %th Start Time
    %th End Time
    %th Contest Statistics
  %tbody
    - @contests.each do |contest|
      %tr.contest-item
        %td= link_to 'Edit', edit_contest_path(contest)
        %td= contest.description
        %td= image_tag contest.image
        %td= contest.prize
        %td= contest.start_time
        %td= contest.end_time
        %td= link_to 'Statistics', plink_admin.contest_statistics_path(contest.id)

%hr

= link_to 'Create New Contest', plink_admin.new_contest_path, class: 'button small'
