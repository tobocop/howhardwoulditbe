.row.collapse
  = render partial: 'plink_admin/users/search_form', locals: {path: search_contests_path}

%table.contest-list
  %thead
    %th Edit
    %th Description
    %th Image
    %th Prize
    %th Start Time
    %th End Time
    %th Contest Statistics
    %th Winners
  %tbody
    - @contests.each do |contest|
      %tr.contest-item
        - if contest.ended?
          %td N/A
        - else
          %td= link_to 'Edit', edit_contest_path(contest)
        %td= contest.description
        %td= image_tag contest.image
        %td= contest.prize
        %td= present_as_date(contest.start_time)
        %td= present_as_date(contest.end_time)
        %td= link_to 'Statistics', plink_admin.contest_statistics_path(contest.id)
        - if contest.finalized_at.present?
          %td Winners Selected
        - elsif contest.ended?
          %td= link_to 'Accept', plink_admin.contest_winners_path(contest.id)
        - else
          %td Contest in Progress

%hr

= link_to 'Create New Contest', plink_admin.new_contest_path, class: 'button small'
