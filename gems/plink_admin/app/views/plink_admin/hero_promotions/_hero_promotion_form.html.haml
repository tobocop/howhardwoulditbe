- if hero_promotion.errors.any?
  .alert-box.alert
    - hero_promotion.errors.full_messages.each do |message|
      %p= message

= form_for(hero_promotion, url: url, as: 'hero_promotion') do |f|
  = f.label :name
  = f.text_field :name
  = f.label :title
  = f.text_field :title
  = f.label :display_order, 'Display Order'
  = f.text_field :display_order
  = f.label :is_active, 'Active'
  = f.check_box :is_active
  = f.label :show_linked_users, 'Show to linked members'
  = f.check_box :show_linked_users
  = f.label :show_non_linked_users, 'Show to non-linked members'
  = f.check_box :show_non_linked_users

  = f.label :image_url, 'Image URL'
  = f.text_field :image_url

  = f.submit button_text, class: 'button small'

= link_to 'Cancel', hero_promotions_path, class: 'button small secondary'
