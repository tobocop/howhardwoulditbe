- if hero_promotion.errors.any?
  .alert-box.alert
    - hero_promotion.errors.full_messages.each do |message|
      %p= message

= form_for(hero_promotion, url: url, as: 'hero_promotion', multipart: true) do |f|
  = f.label :name
  = f.text_field :name
  = f.label :title
  = f.text_field :title
  = f.label :display_order, 'Display Order'
  = f.text_field :display_order
  = f.label :is_active, 'Active'
  = f.check_box :is_active
  = f.label :image_url, 'Image URL (.jpg, .gif, etc) - Left'
  = f.text_field :image_url
  = f.label :link, 'URL for image (admin provided, optional) - Left'
  = f.text_field :link
  = f.label :image_url_right, 'Image URL (.jpg, .gif, etc, optional) - Right'
  = f.text_field :image_url_right
  = f.label :link_right, 'URL for image (admin provided, optional) - Right'
  = f.text_field :link_right

  %p
    Example link to send a user to the card link with tracking parameters: /tracking/new?redirect_user_to=%2Fwallet%3Flink_card%3Dtrue&[tracking_params_here]

  %h4 Audience:
  .right
    = link_to 'Change Audience', plink_admin.edit_audience_hero_promotion_path(hero_promotion)
  - if hero_promotion.audience_by_user_id?
    %h6 Displays to user_ids:
    %o= hero_promotion.user_ids.keys
  - else
    %h6 Via linked status:
    = f.label :show_linked_users, 'Show to linked members'
    = f.check_box :show_linked_users
    = f.label :show_non_linked_users, 'Show to non-linked members'
    = f.check_box :show_non_linked_users


  .right
    = f.submit button_text, class: 'button small'
    = link_to 'Cancel', hero_promotions_path, class: 'button small secondary'
