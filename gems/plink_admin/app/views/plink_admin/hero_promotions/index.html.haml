= link_to 'Create New Hero Promotion', new_hero_promotion_path, class: 'button small'

%table.hero-promotions-list
  %thead
    %th Name
    %th Title
    %th Image
    %th Image Right
    %th Order
    %th Active
    %th Audience
  %tbody
    - @hero_promotions.each do |hero_promotion|
      %tr.hero-promotion-item
        %td= link_to hero_promotion.name, edit_hero_promotion_path(hero_promotion)
        %td= hero_promotion.title
        %td= image_tag hero_promotion.image_url, class: 'hero-promotion-image'
        %td= image_tag hero_promotion.image_url_right, class: 'hero-promotion-image'
        %td= hero_promotion.display_order
        %td= hero_promotion.is_active ? 'Active' : 'Inactive'
        %td= determine_audience(hero_promotion)
