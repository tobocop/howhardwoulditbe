.new-registration-link
  %h1 New Registration Link

  - if @error.present?
    .alert-box.alert
      %p= @error
  .flow-type-selection
    = form_tag nil, method: :get do
      .row
        %p Select a flow type:
        .large-6.columns
          = radio_button_tag :flow_type, 'normal', params[:share_flow] == 'false' ? true : false, class: 'js-flow-type'
          = label_tag :flow_type_normal, 'Normal', value: 'normal'
        .large-6.columns
          = radio_button_tag :flow_type, 'facebook', params[:share_flow] == 'true' ? true : false, class: 'js-flow-type'
          = label_tag :flow_type_facebook, 'Facebook Share', value: 'facebook'

  %hr

  .no-flow-selected
    %p Please select a flow above

  = render partial: 'new_normal_flow'
  = render partial: 'new_facebook_flow'
