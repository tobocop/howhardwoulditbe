%h1 New Registration Link

= form_tag registration_links_path, method: :post do
  .one_third
    - affiliate_select_options = @affiliates.collect {|affiliate| ["#{affiliate.id} - #{affiliate.name}", affiliate.id]}
    = label_tag :affiliate_ids, 'Affiliates (one link generated per affiliate)'
    = select_tag 'affiliate_ids[]', options_for_select(affiliate_select_options), multiple: :true, size: 10
  .one_third
    - campaign_select_options = @campaigns.collect {|campaign| ["#{campaign.id} - #{campaign.name}", campaign.id]}
    = label_tag :campaign_id, 'Campaign'
    = select_tag :campaign_id, options_for_select(campaign_select_options)
  .one_third
    - landing_page_select_options = @landing_pages.collect {|landing_page| ["#{landing_page.id} - #{landing_page.name}", landing_page.id]}
    = label_tag :landing_page_ids, 'Landing Pages (randomly chosen for users)'
    = select_tag 'landing_page_ids[]', options_for_select(landing_page_select_options), multiple: :true, size: 10
  .clear

  = label_tag :start_date, 'Start Date'
  .dateselect
    = date_select 'start_date', :start_date
  = label_tag :end_date, 'End Date (This is the last day the link will be valid)'
  .dateselect
    = date_select 'end_date', :end_date

  = label_tag :is_active, 'Active'
  = check_box_tag :is_active, true, true
  %br

  = submit_tag 'Create', class: 'button small'

= link_to 'Cancel', registration_links_path, class: 'button small secondary'
