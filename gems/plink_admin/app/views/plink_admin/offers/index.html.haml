%table.offer-list
  %thead
    %th ID
    %th Advertiser
    %th Details
    %th End Date
    %th Displayed End Date
    %th Sending Expiration Reminder
    %th Edit
  %tbody
    - @offers.each do |offer|
      %tr.offer-item
        %td= offer.id
        %td= offer.advertiser.advertiser_name
        %td= offer.detail_text
        %td= offer.end_date
        %td= offer.show_end_date ? 'showing date' : 'not showing'
        %td= offer.send_expiring_soon_reminder ? 'sending email' : 'not sending'
        %td= link_to 'Edit', edit_offer_path(offer)


