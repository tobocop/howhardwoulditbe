.home.reg-landing
  .feature{style: "background-image:url(#{landing_page.background_image_url})"}
    =landing_page.header
    =landing_page.sub_header
    .join-btn
      -if user_logged_in?
        = landing_page.logged_in_action_button
      -else
        = landing_page.logged_out_action_button
    =landing_page.details

  .how
    %h2.thin How Plink Works
    .icon-wrapper
      .step
        .icon.one
        =landing_page.how_plink_works_left
      .step
        .icon.two
        =landing_page.how_plink_works_center
        %h4
      .step
        .icon.three
        =landing_page.how_plink_works_right
    .video-btn
      %button.button.home-video{data: {'reveal-id' => 'plink-video-modal', 'reveal-ajax' => '/home/plink_video'}} Watch a short video for more info

  .partners
    %h2.light.cyan Our Partners
    %h3 Earn Plink points when you make a purchase at any of our partner locations.
    .brand-wrapper
      - ordered_partner_logos.each do |sprite_class|
        = render partial: 'home/partner', locals: {sprite_class: sprite_class}
    .partners-btn
      = link_to 'See all of our partners', offers_path, class: 'button home-partners'
    .partners-btn
      = link_to 'See all of our rewards', rewards_path, class: 'button home-partners'

  .security
    %h2.thin Safety first.
    .text
      %h3 Plink uses the same 256-bit encryption and physical security that banks use. We are a Better Business Bureau Accredited business and our practices are monitored and verified by TRUSTe and VeriSign.
    .logos
      .logo
        %span{ id: "d35500c0-c79f-4a6b-a5be-3fd6c350cbf7" }
          %script{ type: "text/javascript", src: "//privacy-policy.truste.com/privacy-seal/Plink/asc?rid=d35500c0-c79f-4a6b-a5be-3fd6c350cbf7" }
          %a{ href: "//privacy.truste.com/privacy-seal/Plink/validation?rid=374bcf9a-9073-4c87-8761-40abf21c2f9e", title: "TRUSTe online privacy certification", target: "_blank" }
            =image_tag "//privacy-policy.truste.com/privacy-seal/Plink/seal?rid=374bcf9a-9073-4c87-8761-40abf21c2f9e", alt: "TRUSTe online privacy certification", height: "28"

      .logo
        %a{ href: "https://trustsealinfo.verisign.com/splash?form_file=fdf/splash.fdf&dn=www.plink.com&lang=en", target: "_verisign" }
          =image_tag "home_security_norton.png", height: "28"

      .logo
        %a{ href: "http://www.bbb.org/denver/business-reviews/marketing-programs-and-services/plink-in-denver-co-90134326##sealclick",target: "_bbb", title: "Click for the Business Review of Plink LLC, a Marketing Programs & Services in Denver CO" }
          =image_tag "https://seal-denver.bbb.org/seals/blue-seal-96-50-plinkllc-90134326.png", height: "28",  alt: "Click for the BBB Business Review of this Marketing Programs & Services in Denver CO"

      .logo
        =image_tag 'home_security_intuit.png'

    .join-btn.bottom
      = link_to 'Join Plink for FREE!', '#', data: {'reveal-id' => 'registration-form'}, class: 'button primary-action large'


  .press
    .logo-wrapper
      .logo.text
        As seen in:
        %br
        %br
      .logo.washpo
      .logo.forbes
      .logo.techcrunch
      .logo.bloomberg
      .logo.gigaom
    %hr

= render "home/welcome_video_modal"
= render partial: 'shared/pixels/steelhouse', locals: {additional_info: @steelhouse_additional_info}
