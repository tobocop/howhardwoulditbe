%header.header.layout-wrapper
  .layout-inner
    %img{ :class => "header-logo", :src => "/assets/header_logo.png", :alt => "Plink" }
    .welcome-text
      %span.header-text.bold Welcome, Kris!
      %br
      %span.header-text You have 999,999 Plink points.
    %ul.nav-ul
      %li.nav-li
        = link_to 'Dashboard', '#', class:'link'
      %li.nav-li
        = link_to 'Wallet', '#', class:'link'
      %li.nav-li
        = link_to 'Rewards', '#', class:'link'
      %li.nav-li
        = link_to 'My Account', '#', class:'link'
      %li.nav-li
        = link_to 'Log Out', '#', method: :delete, class:'link logout'

.reg
  .column-container
    .layout-wrapper
      .layout-inner
        .left-column.no-float
          .steps.first.centered
            .font-p9em.font-lightgray.font-italic Let's Get Started
          .steps
            .circle
              .text 1
            Find your bank or credit card provider.
          .steps
            .circle.offset
              .text 2
            Connect it to Plink.
          .steps.last.active
            .circle.offset
              .text 3
            Choose a card.

        .right-column.pad-left-86
          .font-p9em.font-lightgray.font-w300.font-italic Step 3 of 3
          .spacer-top-24
            =image_tag 'https://plink-images.s3.amazonaws.com/bank_logos/desktop_reg/bank_chase.png', class:'reg-bank-logo'
            /*.font-1p5em If No Logo, Use This Text Style*/
          .spacer-top-8
            .gray-box
              .font-p9em.font-w300 Secure connection established.
          .spacer-top-24
            .font-1p5em Select the card you'd like to earn rewards with.
          .spacer-top-8
          %hr
          .spacer-top-8
            .card-select-container
              .button-container.no-margin.vert-align-top
                %button.button.primary-action Select
              .card-info
                .font-1em.font-w500.font-uppercase.font-kern1 Chase Checking
                .font-p9em.font-w300 1234 5432 6543 6789
            .card-select-container.alt
              .button-container.no-margin.vert-align-top
                %button.button.primary-action Select
              .card-info
                .font-1em.font-w500.font-uppercase.font-kern1 Chase Saving
                .font-p9em.font-w300 1234 5432 6543 6789
            .card-select-container
              .button-container.no-margin.vert-align-top
                %button.button.primary-action Select
              .card-info
                .font-1em.font-w500.font-uppercase.font-kern1 Chase Credit
                .font-p9em.font-w300 1234 5432 6543 6789
            .card-select-container.alt
              .button-container.no-margin.vert-align-top
                %button.button.primary-action Select
              .card-info
                .font-1em.font-w500.font-uppercase.font-kern1 Chase Double Black Platinum Baller Status
                .font-p9em.font-w300 1234 5432 6543 6789
      .clear