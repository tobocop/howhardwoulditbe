      %h4 Password
      %h3.bold ******
      %a Change  
      .change
        .field
          %h2 Enter your current password:
          %input.form-field.input{:value => 'Current Password'}
        .field  
          %h2 Enter your new password:
          %input.form-field.input{:value => 'New Password'}
        .field  
          %h2 Confirm your new password:
          %input.form-field.input{:value => 'Confirm New Password'}
        .cancel-btn
          %button.button.secondary-action Cancel
        .submit-btn    
          %button.button.primary-action Change Your Password   
