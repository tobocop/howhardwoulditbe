.layout-inner
  .confirm
    .headline
      %h1 Congrats on your loot!
      %h2
        You've succesfully redeemed for a
        %span.h2.bold
          #{plink_currency_format(@reward.amounts.first.dollar_award_amount)} #{@reward.name}.
    .details
      %h3= @reward.description.html_safe
      %br
      = link_to "Go To My Wallet >", wallet_path
    %hr
    .legal
      %h3.gray Legal Stuff
      %h4= @reward.terms.html_safe
