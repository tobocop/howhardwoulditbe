- if amount.dollar_award_amount > max_reward_amount
  .denomination.locked
    = plink_currency_format(amount.dollar_award_amount)
    .flag-locked
      %img{ :src => "/assets/icon_lock.png"}
- else
  .denomination.unavailable
    = plink_currency_format(amount.dollar_award_amount)
    .denom-value
      %h4 #{current_virtual_currency.amount_in_currency(amount.dollar_award_amount)} Points
