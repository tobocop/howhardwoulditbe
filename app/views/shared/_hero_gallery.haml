.hero-gallery
  .hero-gallery-inner
    %ul.bjqs
      - promotions.each do |hero_promotion|
        - show_promotion = (!user_has_account && hero_promotion.show_non_linked_users) || (user_has_account && hero_promotion.show_linked_users)
        - if show_promotion
          %li.bjqs-slide
            = image_tag hero_promotion.image_url, title: hero_promotion.title
