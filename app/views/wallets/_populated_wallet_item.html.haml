.slot
  .slot-inner
    .brand
      %img{src: wallet_item.icon_url, alt: wallet_item.icon_description}
    .info
      %h3 up to
      %h1.numbers= wallet_item.max_currency_award_amount
      %h3= wallet_item.currency_name
      = link_to 'Remove', wallet_item.wallet_offer_url, class: 'button wallet-remove', data: {remove_from_wallet: true}