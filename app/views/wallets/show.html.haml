.layout-inner
  .left-column
    %h1 My Wallet

    .wallet
      - @wallet_items.each do |presented_item|
        = render partial: "#{presented_item.partial}", locals: { presenter: presented_item }

  .wallet
    %h2 Select From These Offers
    = render :partial => 'shared/offers', locals: {offers: @offers, button_label: 'Add to wallet'}
