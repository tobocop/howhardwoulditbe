!!!
%html
  %head
    %title Plink
    = stylesheet_link_tag    'application', :media => 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag "http://cdn.gigya.com/JS/socialize.js?apikey=#{Gigya::Config.instance.api_key}"
    = csrf_meta_tags

  %body
    .layout-inner
      .flash-container
        - if flash.notice
          .flash-msg= flash.notice
    %header.header.layout-wrapper
      .layout-inner
        - if user_logged_in?
          %a{ href: wallet_path }
            = image_tag 'header_logo.png', class: 'header-logo', alt: 'Plink'
          = render partial: 'shared/logged_in_nav'
        - else
          %a{ href: root_path }
            = image_tag 'header_logo.png', class: 'header-logo', alt: 'Plink'
          = render partial: 'shared/logged_out_nav', locals: {_user_registration_form: user_registration_form}

    .layout-wrapper
      = yield

    = render partial: 'shared/footer'