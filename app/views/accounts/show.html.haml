.layout-inner
  .account
    -#Remove me later
    %div{style: 'padding-top: 20px;'}

    = link_to 'Link Card', '#', data: { 'reveal-id' => 'card-add-modal' }

    %br
    %br

    %h1.cyan You have #{current_user.current_balance.to_i} #{current_virtual_currency.currency_name}.

    %p Lifetime balance: #{current_user.lifetime_balance.to_i} #{current_virtual_currency.currency_name}

    %p Card Linked?: #{@user_has_account}

    %p Email: #{current_user.email}

    - if current_user.can_redeem?
      = link_to 'Redeem', '#'

    %br
    %br

    #card-add-modal.reveal-modal.cf-modal
      %iframe{src: @card_link_url, style: 'height: 1000px; width: 100%;'}